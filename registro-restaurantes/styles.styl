body
  font-family: sans-serif
  font-size: 12px
  font-weight: normal
  color: white
  background-image: url(../images/Fondo.png)
  background-size: 100% 100%
  background-repeat: no-repeat
  height: 100%

.container
  display: flex
  flex-direction: column
  //flex-wrap: wrap
  justify-content: center
  padding-left: 12%
  padding-right: 12%
  text-align: center
  margin-bottom: 40px

.topbar
  background-color: transparent
  color:white
  font-size: 20px
  padding: 20px 80px 0px 80px
  height:45px
  display: flex
  justify-content: space-between

.title > h1
  font-weight: bold
  font-size: 20px

.title > h3
  font-weight: lighter
  font-size: 15px



img.logo
    width: 70px
    height: 30px


div.irHacia
  width: 200px
  display: flex
  justify-content: space-between


.bar
  &-icon
    display: inline-block
    height: 20px
    width: 20px
    background-color: yellow
    display:inline-block
    border-radius: 100%
    padding:12px
    color:white
    font-size: 20px
    text-align: center
    border-color: white
    &-name
      display: flex
      justify-content: center
      & > span
        padding-left: 35px
        padding-right: 20px

  &-progress
      display: inline-block
      width:60px
      height:8px
      background-color: yellow
      border-radius: 1%
#baricon2
  background-color: white
  color: yellow
  border-color: yellow



#register-restaurant
  display: none

.register
  text-align: left
  display: flex
  justify-content: space-around
  padding-bottom: 30px
  &-input
    width: 230px
    height: 30px
    border-radius: 5%
    margin-bottom: 5px
    &-half
      width: 110px
      height: 30px
      border-radius: 5%
      margin-bottom: 5px
  &-rbtn
    width: 20px
    height: 20px
    margin-left: 10px

  &-btn
    display: inline-block
    height: 50px
    width: 200px
    padding: 8px
    margin: 15px
    color: #fff
    border: 2px solid #fff
    background-color: transparent

.col
  display: flex
  align-content: center
  flex-wrap: wrap
  flex-direction: column
.row
  display: flex
  justify-content: space-between
  &-left
    display: flex
    justify-content: flex-start

a
  font-size: 12px
  text-decoration: none
  color: inherit
  padding-left: 12px

label
  padding: 3px
